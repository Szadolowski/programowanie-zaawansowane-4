{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Kompilacja Matrix",
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++17",

        // Gdzie szukać nagłówków
        "-I",
        "${workspaceFolder}/include",

        // LISTA PLIKÓW DO KOMPILACJI (Musimy je wymieniać ręcznie na Windows)
        "${workspaceFolder}/src/matrix_core.cpp",
        "${workspaceFolder}/app/main.cpp",

        "-o",
        "${workspaceFolder}/matrix_app.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true },
      "detail": "Kompilacja wskazanych plików projektu"
    }
  ]
}
